<header class='jumbotron'>
    <div class='container d-flex justify-content-center align-items-center'>
        <div class='heading text-white'>
            <h1>Welcome, {{name}}</h1>
        </div>
    </div>
</header>

<div class='container d-flex flex-wrap flex-lg-nowrap justify-content-center mt-5'>
    <div class='col-md-6 mx-3 mb-5 px-3'>
        <h2>Create a New Post</h2>

        <form class='form new-post-form'>
            <div class='form-group mb-3 row'>
                <label for='post-title'>post title:</label>
                <input class='form-input' type='text' id='post-title' name='post-title' />
            </div>
            <div class='form-group mb-3 row'>
                <label for='post-desc'>description:</label>
                <input class='form-input' id='post-desc' name='post-desc' />
            </div>
            <div class='form-group mb-3 row'>
                <label for='post-content'>content:</label>
                <textarea class='form-input' id='post-content' name='post-content'></textarea>
            </div>
            <div class='form-group text-center'>
                <button type='submit' class='btn btn-primary'>Create</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
        <div class='col col-md-6 mx-2 mb-5 px-3 post-list'>
            <h2>Current Posts</h2>

            {{#each posts as |post|}}
                <div class='row mb-3'>
                    <div class='col-8'>
                        <h4>
                            <a class='nav-link text-secondary' href='/post/{{post.id}}'>{{post.title}}</a>
                        </h4>
                    </div>
                    <div class='col-4'>
                        <button class='btn btn-sm btn-danger' data-id='{{post.id}}'>DELETE</button>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>

<script src='./js/dashboard.js'></script>